{%- comment -%}
  THEME-001: Quick View Trigger Button
  Add to product cards to trigger the quick view modal
  
  Usage: {% render 'quick-view-trigger', product: product %}
{%- endcomment -%}

{%- if product != blank and product.available -%}
  <button 
    class="quick-view-trigger"
    onclick="openQuickView('{{ product.url }}')"
    aria-label="{{ 'products.product.quick_view' | t | default: 'Quick view' }} {{ product.title }}"
    type="button"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
      <circle cx="12" cy="12" r="3"></circle>
    </svg>
    <span>{{ 'products.product.quick_view' | t | default: 'Quick View' }}</span>
  </button>
{%- endif -%}

<style>
  .quick-view-trigger {
    position: absolute;
    bottom: 8px;
    right: 8px;
    z-index: 2;
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 8px 12px;
    background: var(--color-background, #fff);
    border: 1px solid var(--color-border, #e5e5e5);
    border-radius: 4px;
    font-size: 12px;
    font-weight: 500;
    cursor: pointer;
    opacity: 0;
    transform: translateY(8px);
    transition: opacity 0.2s, transform 0.2s, background-color 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .quick-view-trigger:hover {
    background: var(--color-primary, #000);
    color: var(--color-primary-contrast, #fff);
    border-color: var(--color-primary, #000);
  }
  
  .quick-view-trigger svg {
    flex-shrink: 0;
  }
  
  /* Show on card hover */
  .product-card:hover .quick-view-trigger,
  .product-card:focus-within .quick-view-trigger {
    opacity: 1;
    transform: translateY(0);
  }
  
  /* Always show on touch devices */
  @media (hover: none) {
    .quick-view-trigger {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Hide text on small cards */
  @media (max-width: 480px) {
    .quick-view-trigger span {
      display: none;
    }
    
    .quick-view-trigger {
      padding: 8px;
    }
  }
</style>
